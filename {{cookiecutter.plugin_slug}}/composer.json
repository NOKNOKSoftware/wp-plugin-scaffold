{
    "type": "wordpress-plugin",
    "license": "All Rights Reserved",
    "autoload": {
        "psr-4": {
            "{{ cookiecutter.plugin_namespace }}\\": "src/"
        }
    },
    "require-dev": {
        "pxlrbt/php-scoper-prefix-remover": "^0.1.0",
        "php-stubs/wordpress-stubs": "^5.6",
        "php-stubs/woocommerce-stubs": "^4.8",
        "paulthewalton/acf-pro-stubs": "5.8.9.1"
    },
    "config": {       
        "platform": {
            "php": "{{ cookiecutter.php_version }}"
        }
    },
    "extra": {
        "patches": {
            "coenjacobs/mozart": {}
        },
        "mozart": {
            "dep_namespace": "{{ cookiecutter.plugin_namespace }}\\Dependencies\\",
            "dep_directory": "/src/Dependencies/",
            "classmap_directory": "classes/dependencies/",
            "classmap_prefix": "{{ cookiecutter.plugin_namespace }}_",
            "delete_vendor_directories": true
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mozart compose",
            "composer dump-autoload"
        ],
        "post-update-cmd": [
            "mozart compose",
            "composer dump-autoload"
        ]
    }
}
